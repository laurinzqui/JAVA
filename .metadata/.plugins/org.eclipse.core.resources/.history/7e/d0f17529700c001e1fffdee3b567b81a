package entidades;

public class Persona {
//1. Propiedades o atributos
	public String nombre; 
	public int edad;
	public String correo; 
	public String telefono; 
	
	//2 constructor (con parametros)
	public Persona (String nombre, int edad, String correo, String telefono) {
		this.nombre = nombre; 
		this.edad = edad; 
		this.correo = correo; 
		this.telefono = telefono;
	}
	//3. metodos
	public void mostrarInformaci√≥n() {
		System.out.printIn("Nombre: " + nombre);
		System.out.printIn("Edad: " + nombre);
		System.out.printIn("Correo: " + nombre);
		System.out.printIn("Telefono: " + nombre);
		
	}
	
	
}
